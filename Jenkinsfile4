pipeline{

agent any

parameters {
  string (name: 'paramMdas_POM', defaultValue: 'QA', description: 'This is the value passing from paraMdas defined in Jenkins Declarative PipleLine from SCM GIT ')
  choice (name: 'branchOfProject(Amazon)', choices: ['master', 'smoke'], description: 'This is the branch name required for Amazon test to run')

}

stages {

stage('git checkouts') {
  steps {
            git branch:'${params.branchOfProject(Amazon)}', url:'https://github.com/mdashub/MFS_Jenkins.git'
  }
}

stage ('run test'){
      steps{
            bat "mvn clean install -DparaMdas=${params.paramMdas_POM}"
            junit  testResultsPattern: '**/testng-results.xml'
        }
      }

  }
}
